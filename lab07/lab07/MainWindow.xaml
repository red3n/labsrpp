<Window x:Class="lab07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="Построение и трансформация графических фигур"
        Height="500" Width="800">

   
    <Window.Resources>
        <Style x:Key="EllipseStyle" TargetType="Ellipse">
            <Setter Property="Stroke" Value="Purple"/>
            <Setter Property="StrokeThickness" Value="4"/>
            <Setter Property="StrokeDashArray" Value="4 2"/>
            <Setter Property="StrokeLineJoin" Value="Round"/>
            <Setter Property="Fill">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="Pink" Offset="0"/>
                        <GradientStop Color="Purple" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Управление масштабом"
                       FontWeight="Bold"
                       Margin="5"/>

            <Button Content="Масштаб +"
                    Margin="5"
                    Click="ScaleUp_Click"/>

            <Button Content="Масштаб -"
                    Margin="5"
                    Click="ScaleDown_Click"/>
        </StackPanel>

       
        <Canvas Grid.Column="1"
                Background="LightGray">

            
            <Ellipse x:Name="MainEllipse"
                     Width="120"
                     Height="80"
                     Canvas.Left="50"
                     Canvas.Top="50"
                     Style="{StaticResource EllipseStyle}"
                     RenderTransformOrigin="0.5,0.5">

                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="EllipseScale"
                                    ScaleX="1"
                                    ScaleY="1"/>
                </Ellipse.RenderTransform>

            </Ellipse>

            
            <Polygon x:Name="MainPolygon"
                     Points="0,50 50,0 100,50 50,100"
                     Canvas.Left="250"
                     Canvas.Top="80"
                     Stroke="Black"
                     StrokeThickness="3"
                     StrokeLineJoin="Bevel"
                     Fill="Orange"
                     RenderTransformOrigin="0.5,0.5">

                <Polygon.RenderTransform>
                    <ScaleTransform x:Name="PolygonScale"
                                    ScaleX="1"
                                    ScaleY="1"/>
                </Polygon.RenderTransform>

            </Polygon>

           
            <Path x:Name="MainPath"
                  Stroke="DarkGreen"
                  StrokeThickness="3"
                  Fill="LightGreen"
                  Canvas.Left="420"
                  Canvas.Top="150"
                  RenderTransformOrigin="0.5,0.5">

                <Path.RenderTransform>
                    <ScaleTransform x:Name="PathScale"
                                    ScaleX="1"
                                    ScaleY="1"/>
                </Path.RenderTransform>

                <Path.Data>
                    <CombinedGeometry GeometryCombineMode="Union">
                        <CombinedGeometry.Geometry1>
                            <EllipseGeometry Center="50,50"
                                             RadiusX="40"
                                             RadiusY="40"/>
                        </CombinedGeometry.Geometry1>
                        <CombinedGeometry.Geometry2>
                            <RectangleGeometry Rect="30,30,80,40"/>
                        </CombinedGeometry.Geometry2>
                    </CombinedGeometry>
                </Path.Data>

            </Path>

        </Canvas>

    </Grid>
</Window>